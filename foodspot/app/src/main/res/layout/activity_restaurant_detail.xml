<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cream">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/FoodSpot.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            app:title="@string/title_details"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_cream">

                <!-- Hero Image -->
                <ImageView
                    android:id="@+id/imageRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hero_image_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_restaurant_placeholder"
                    android:contentDescription="@string/label_name" />

                <!-- Content Section -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_l">

                    <!-- Restaurant Name -->
                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.H1"
                        android:textColor="@color/text_primary"
                        android:text="Restaurant Name"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/spacing_s">

                        <RatingBar
                            android:id="@+id/detailRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:rating="4.5"
                            android:progressTint="@color/star_gold"
                            style="?android:attr/ratingBarStyleSmall" />

                        <TextView
                            android:id="@+id/textRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xxs"
                            android:textAppearance="@style/TextAppearance.Body"
                            android:textColor="@color/text_secondary"
                            android:text="(4.5)" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textMeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textAppearance="@style/TextAppearance.Small"
                        android:textColor="@color/text_secondary"
                        android:text="$$ â€¢ 750 m"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textAppearance="@style/TextAppearance.Small"
                        android:textColor="@color/text_secondary"
                        android:text="750 m away"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_m"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:textColor="@color/text_secondary"
                        android:text="123 Main Street, Toronto, ON"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- View on Map Link -->
                    <TextView
                        android:id="@+id/buttonMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:textColor="@color/accent_red"
                        android:text="@string/btn_view_map"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="@dimen/spacing_xxs" />

                    <!-- Description Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xl"
                        android:textAppearance="@style/TextAppearance.H3"
                        android:textColor="@color/text_primary"
                        android:text="Description" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:textColor="@color/text_primary"
                        android:text="Restaurant description text goes here..."
                        android:lineSpacingMultiplier="1.5" />

                    <!-- Contact Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xl"
                        android:textAppearance="@style/TextAppearance.H3"
                        android:textColor="@color/text_primary"
                        android:text="Contact" />

                    <TextView
                        android:id="@+id/textPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:textColor="@color/text_secondary"
                        android:text="(416) 555-0123" />

                    <!-- Categories Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xl"
                        android:textAppearance="@style/TextAppearance.H3"
                        android:textColor="@color/text_primary"
                        android:text="Categories" />

                    <TextView
                        android:id="@+id/textTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_s"
                        android:textAppearance="@style/TextAppearance.Tag"
                        android:textColor="@color/text_primary"
                        android:text="Italian, Fine Dining, Romantic" />


                    <CheckBox
                        android:id="@+id/checkFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xl"
                        android:text="@string/label_favorite"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_massive" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Action Drawer (Bottom Sheet) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp"
            android:background="@drawable/bg_drawer_top_rounded">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_m">

                <!-- Drawer Handle -->
                <LinearLayout
                    android:id="@+id/layoutDrawerHandle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_collapsed_height"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/imageDrawerHandle"
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@android:drawable/arrow_up_float"
                        android:contentDescription="Expand drawer"
                        app:tint="@color/orange_primary" />
                </LinearLayout>

                <!-- Drawer Content (initially hidden/collapsed) -->
                <LinearLayout
                    android:id="@+id/layoutDrawerContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Action Buttons Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/buttonEdit"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:text="@string/btn_edit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_gradient_orange" />

                        <Button
                            android:id="@+id/buttonDelete"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:text="@string/btn_delete"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/accent_red" />

                        <Button
                            android:id="@+id/buttonShare"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="@string/btn_share"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_gradient_orange" />
                    </LinearLayout>

                    <!-- Favorite Button Row 2 -->
                    <Button
                        android:id="@+id/buttonFavorite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/spacing_m"
                        android:text="Add to Favorites"
                        android:textAllCaps="false"
                        android:textColor="@color/accent_red"
                        android:backgroundTint="@color/white"
                        android:drawableStart="@android:drawable/btn_star_big_off"
                        android:drawableTint="@color/accent_red" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
